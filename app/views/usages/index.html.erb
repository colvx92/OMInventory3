<p id="notice"><%= notice %></p>

<h1>Usages</h1>

<table>
  <thead>
    <tr>
      <th>Amount used</th>
      <th>Appointment</th>
      <th>Supply</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usages.each do |usage| %>
      <tr>
        <td><%= usage.amount_used %></td>
        <td><%= usage.appointment %></td>
        <td><%= usage.supply %></td>
        <td><%= link_to 'Show', usage %></td>
        <td><%= link_to 'Edit', edit_usage_path(usage) %></td>
        <td><%= link_to 'Destroy', usage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

